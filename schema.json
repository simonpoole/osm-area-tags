{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "$id": "https://github.com/simonpoole/geocontext",
    "additionalProperties": false,
    "type": "object",
    "properties": {
        "areaKeys": {
            "type": "object",
            "patternProperties": {
                "^[a-zA-Z].*": {
                    "type": "object",
                    "properties": {
                        "default": {
                            "description": "true if the key is normally an area",
                            "type": "boolean"
                        }
                    },
                    "required": [
                        "default"
                    ],
                    "patternProperties": {
                        "^[a-zA-Z].*": {
                            "description": "value of the tag, true if an area, false if not",
                            "type": "boolean"
                        }
                    }
                }
            }
        }
    },
    "required": [
        "areaKeys"
    ]
}
